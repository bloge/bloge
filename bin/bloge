#!/usr/bin/env php
<?php

/**
 * Bloge CLI application based on Symfony Console component
 * 
 * @package Bloge
 */

$files = [
    dirname(dirname(__DIR__)) . '/vendor/autoload.php',
    dirname(__DIR__) . '/vendor/autoload.php',
    __DIR__ . '/vendor/autoload.php',
];

foreach ($files as $file) {
    if (!is_file($file)) {
        continue;
    }
    
    require $file;
    
    $files = null;
}

if ($files) {
    die('Composer\'s autoloader couldn\'t be found');
}

use Bloge\CLI\BlogeApplication;
use Bloge\CLI\CompileCommand;

$composer = json_decode(file_get_contents(dirname(__DIR__) . '/composer.json'));
$version  = isset($composer['version']) ? $composer['version'] : 'UNKNOWN';

$app = new BlogeApplication('Bloge', $version);
$app->add(new CompileCommand);
$app->run();